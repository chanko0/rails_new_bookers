<body>
 
 <div class="index-destroy-message">
  <% if flash[:notice] %>
   <div>
    <%= flash[:notice] %>
   </div>
  <% end %>
 </div>
 
 <h1>Books</h1>
 
 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
      <%= link_to 'Show', book_path(book.id) %>
      <%= link_to 'Edit', edit_book_path(book) %>
      <%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sure?" %>
     </td> 
    </tr>
   <% end %>
  </tbody>
 </table>
 
 <section class="bookers-form-box">
  <div class="bookers-form">
   <h2 class="newbook">New book</h2>
   <% if @book.errors.any? %>
   <div class="index-errors">
    <%= @book.errors.count %> errors prohibited this book from being saved:
   </div>
   <div class="index-errors-text">
    <% @book.errors.full_messages.each do |message| %>
     <p>ãƒ»
      <%= message %>
     </p>
    <% end %>
   </div>
   <% end %>
   
   <%= form_with model:@book, local:true do |f| %>
    <p class="field">title</p>
    <%= f.text_field :title %>
    <p class="field">body</p>
    <%= f.text_area :body %>
    <div class="action">
    <%= f.submit 'Create Book' %>
    </div>
   <% end %>
  </div>
 </section>
</body>